<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern" value="[%-5p] %d{yyyy-MM-dd HH:mm:ss,SSS} - %c{1.} - %m%n" />
		</layout>
	</appender>

	<logger name="Main">
		<level value="INFO"/>
	</logger>

	<logger name="com.amoobi">
		<level value="TRACE"/>
	</logger>

	<logger name="org.springframework"><level value="WARN"/></logger>
	<logger name="org.hibernate"><level value="WARN"/></logger>

	<logger name="org.hibernate.SQL">
		<level value="DEBUG" /> <!-- Leave this at INFO level if you want to measure performance and you're not interested by SQL statements. -->
	</logger>

	<!-- <logger name="org.hibernate.type"><level value="TRACE"/></logger>--> <!-- Show the detail of the parameter binding. (It is verbose!) -->
	<!-- <logger name="org.hibernate.engine.jdbc.batch"><level value="INFO" />-->
	<!-- <logger name="org.hibernate.persister.entity"><level value="DEBUG" />--> <!-- Useful to see insert,update,delete statement generated by Hibernate. Important when using @SQLInsert @SQLUpdate @SQLDelete annotations to guess the order of the bind variables ! -->
	<!-- <logger name="org.hibernate.engine.transaction.internal.jdbc"><level value="INFO" />-->

	<root>
		<priority value="INFO" />
		<appender-ref ref="console" />
	</root>

</log4j:configuration>
