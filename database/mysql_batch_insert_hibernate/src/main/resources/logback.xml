<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="Main" level="INFO" />

    <logger name="com.toying" level="TRACE" />

    <logger name="org.hibernate" level="WARN" />
    <logger name="org.hibernate.SQL" level="INFO" /> <!-- Leave this at INFO level if you want to measure performance and you're not interested by SQL statements. -->
    <!-- <logger name="org.hibernate.type" level="TRACE" />--> <!-- Show the detail of the parameter binding. (It is verbose!) -->
    <logger name="org.hibernate.engine.jdbc.batch" level="INFO" />
    <logger name="org.hibernate.persister.entity" level="DEBUG" /> <!-- Useful to see insert,update,delete statement generated by Hibernate. Important when using @SQLInsert @SQLUpdate @SQLDelete annotations to guess the order of the bind variables ! -->
    <logger name="org.hibernate.engine.transaction.internal.jdbc" level="INFO" />


    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>